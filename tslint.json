{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-no-multiline-js": [
      false,
      "log",
      "error"
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "jsx-no-lambda": [
      false,
      "log",
      "error"
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "no-console": [
      false,
      "log",
      "error"
    ],
    "quotemark": [
      false,
      "single",
      "jsx-single"
    ],
    "jsx-self-close": [
      false,
      "single",
      "jsx-single"
    ],
    "max-classes-per-file": [
      true,
      5
    ],
    "arrow-parens": false,
    "no-submodule-imports": false,
    "semicolon": [
      true
    ],
    "object-literal-sort-keys": false,
    "max-line-length": [
      true,
      250
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-bitwise": false,
    "curly": [
      true,
      "ignore-same-line"
    ]
  }
}